<!DOCTYPE html>
<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <title>WeDecide</title>

  <!-- inject:css -->
  <link rel="stylesheet" href="/voters/css/vertical-layout-light/style.css">
  <!-- endinject -->

</head>

<body>
  <div class="container-scroller">
    <div class="container-fluid page-body-wrapper full-page-wrapper">
      <div class="content-wrapper d-flex align-items-center auth px-0">
        <div class="row w-100 mx-0">
          <div class="col-lg-4 mx-auto">
            <div class="auth-form-light text-left py-5 px-4 px-sm-5">

              <h4></h4>
              <h6 class="font-weight-light"></h6>
              <form action="/voter/vote-election" method="POST" class="pt-3">
                <%- include("message") -%>
                  <div class="form-group">
                    <select name="election" class="form-control form-control-lg" id="exampleFormControlSelect2">
                      <% for( let app=0; app < result.length; app++ ) { %>
                        <option selected="<%= formData?.election?.split(" /")[1]===result[app].name%>"
                          value="<%= `${result[app]._id}/${result[app].name}` %>">
                            <%= result[app].name %>
                        </option>
                        <% } %>
                    </select>
                  </div>
                  <div class="form-group">
                    <input required name="username" type="text" value="<%= formData?.username ?? "" %>"
                      class="form-control form-control-lg" id="exampleInputUsername1" placeholder="Username">
                  </div>
                  <div class="form-group">
                    <input required name="password" type="password" value="<%= formData?.password ?? '' %>"
                      class="form-control form-control-lg" id="exampleInputPassword1" placeholder="Password">
                  </div>

                  <div class="mt-3">
                    <button type="submit" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn">Face
                      Check</button>
                  </div>
                  <div class="text-center mt-4 font-weight-light">
                    Register to vote <a href="/voter/register-election" class="text-primary">Sign Up</a>
                  </div>
              </form>
            </div>
          </div>
        </div>
      </div>
      <!-- content-wrapper ends -->
    </div>
    <!-- page-body-wrapper ends -->
  </div>
  <script src="/vendors/js/vendor.bundle.base.js"></script>
  <script src="/js/bootstrap.min.js"></script>
  <!-- container-scroller -->
</body>

</html>